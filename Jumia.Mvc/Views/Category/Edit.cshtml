@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer localizer
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}


@model CategoryDto

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background-color: #232f3e; color: white;">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="NameAr" class="text-white">@localizer["English Name"]</label>
                            <input asp-for="NameAr" class="form-control" style="background-color:" placeholder="Enter category name" />
                            <span asp-validation-for="NameAr" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NameEn" class="text-white">@localizer["Arabic Name"]</label>
                            <input asp-for="NameEn" class="form-control" style="background-color:" placeholder="Enter category name" />
                            <span asp-validation-for="NameEn" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary" style="background-color: #eaeded;color:#232f3e">@localizer["Save"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>