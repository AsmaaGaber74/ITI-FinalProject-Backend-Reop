@model List<CategoryDto>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <a asp-action="Create" class="btn bg-success bg-gradient">Create</a>
}
else
{
    <p>No categories found.</p>
}

