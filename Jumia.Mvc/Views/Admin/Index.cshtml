@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer localizer
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
@{
    ViewData["Title"] = "Employee";
}
<head>
    <style>
        .bg-info{
            background-color: #0000000f !important;
        }
        .bg-info h4{
                color: black;
        }
        .bg-info .icon i {
                color: #007bff !important;
                font-size: 44px !important;
        }

        .bg-info .small-box-footer{
                color: #007bff !important;
        }
        .bg-warning{
            background-color: #0000000f !important
        }
        .bg-warning h4{
                color: black;
        }
        .bg-warning a{
            color:white !important;
            }

        .bg-warning .icon i {
                color: #007bff !important;
                font-size: 44px !important;
        }

        .bg-warning .small-box-footer {
                color: #007bff !important;
        }
        .bg-success{
            background-color: #0000000f !important;
        }

        .bg-success h4 {
            color: black;
        }

        .bg-success .icon i {
                color: #007bff !important;
                font-size: 44px !important;
        }

        .bg-success .small-box-footer {
                color: #007bff !important;
        }
        .bg-danger{
            background-color: #0000000f !important;
        }

        .bg-danger h4 {
            color: black;
        }

        .bg-danger .icon i {
            color: #007bff !important;
                font-size: 44px !important;
        }

        .bg-danger .small-box-footer {
                color: #007bff !important;
        }
    </style>
</head>


<div class="row" dir="@(isRtl ? "RTL":"LTR")" >

    <!-- small box number of proudect-->
    <div class="col-lg-3 col-6">
        <div class="small-box  bg-info">
            <div class="inner">
                <h3 id="productCount"></h3> <!-- Display the product count  -->
                <h4>@localizer["Total Products"]</h4>
            </div>
            <div class="icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <a class="small-box-footer " asp-area="" asp-controller="Product" asp-action="Index">Show proudect <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- small box number of order-->
    <div class="col-lg-3 col-6">
        <div class="small-box  bg-warning">
            <div class="inner">
                <h3 id="orderCount"></h3> <!-- Display the order  -->
                <h4>@localizer["Total orders"]</h4>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a class="small-box-footer " asp-area="" asp-controller="Admin" asp-action="DisplayOrders" class="nav-link">Show orders <i class="fas fa-arrow-circle-right"></i></a>

        </div>
    </div>

    <!-- small box payment -->
    <div class="col-lg-3 col-6">
        <div class="small-box  bg-success">
            <div class="inner">
                <h3 id="paymentCount"></h3> <!-- Display payment -->
                <h4>@localizer["Total Payment"]</h4>
            </div>
            <div class="icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <a class="small-box-footer " asp-area="" asp-controller="Admin" asp-action="index">Paymen<i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- small box user register -->
    <div class="col-lg-3 col-6">
        <div class="small-box  bg-danger">
            <div class="inner">
                <h3 id="userCount"></h3> <!-- Display user -->
                <h4>@localizer["User Registrations"]</h4>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a class="small-box-footer " asp-area="" asp-controller="Admin" asp-action="index">Paymen<i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

</div>

<!-- /.row -->
