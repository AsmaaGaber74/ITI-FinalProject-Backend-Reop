@model IEnumerable<Jumia.Dtos.ViewModel.Review.ReviewAdminDTO>

@{
    ViewData["Title"] = "Review Index";
}

<h2>Review Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>User ID</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date Posted</th>
            <th>Actions</th> <!-- Add a header for the actions column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.ProductID</td>
                <td>@review.UserID</td>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
                <td>@review.DatePosted.ToString("yyyy-MM-dd")</td>
                <td>
                    <!-- Add Delete Button -->
                    <form asp-action="Delete" asp-controller="Review" asp-route-id="@review.Id" method="post">
                        <button type="submit" class="btn btn-danger" >Delete</button>
@*                         onclick="return confirm('Are you sure you want to delete this review?');"
 *@                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
