@model RoleViewModel

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background-color: #232f3e; color: white;">
                <div class="card-body">
                    <h2 class="text-center mb-4">Add Role</h2>

                    <form asp-action="AddRole" method="post">
                        <div class="form-group">
                            <label asp-for="RoleName"></label>
                            <input asp-for="RoleName" class="form-control" style="background-color: #3e4855; color: white;" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-3" style="background-color: #eaeded; color:#232f3e">Add Role</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>