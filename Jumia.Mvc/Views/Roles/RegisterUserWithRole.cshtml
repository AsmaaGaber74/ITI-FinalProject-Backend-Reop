@model RegisterViewModel

@{
    ViewData["Title"] = "RegisterUserWithRole";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background-color: #323c58; color: white;">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    <form asp-action="RegisterUserWithRole" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" style="background-color: #3e4855; color: white;" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" style="background-color: #3e4855; color: white;" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="password" style="background-color: #3e4855; color: white;" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" style="background-color: #3e4855; color: white;" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="roleName">Role</label>
                            <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.Roles))" style="background-color: #3e4855; color: white;">
                                <option>Please select a role</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Register" class="btn btn-primary btn-block" style="background-color: #eaeded; color:#232f3e" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}