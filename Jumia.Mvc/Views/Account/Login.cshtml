@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_loginLayout.cshtml";

}
<head>
    <link href="~/css/Account.css" rel="stylesheet" />
    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
        }

        .parent {
            border: 2px solid #ddd;
            margin-bottom: 50px;
        }

        .create {
            text-align: left;
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo img {
            width: 130px;
        }

        .main {
            padding: 20px;
        }

        .registration-container {
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

            .registration-container h1 {
                margin-bottom: 20px;
                text-align: center;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .form-check {
            margin-bottom: 20px;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
        }

        .main {
            margin-bottom: 50px;
        }

        .btn {
            background-color: #FFD814;
            width: 100%;
        }
    </style>
</head>

<main class="main">
    <div class="registration-container">
        <header class="header">
            <a href="#" class="logo">
                <img src="~/images/amazon.webp" alt="Company Logo">
            </a>
        </header>
        <h1 class="create">Sign in</h1>
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-label-for="Name">Your UserName</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-label-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>

            <div class="form-group">
                <div class="form-check">

                    <label class="form-check-label" for="agreeCheckbox">
                        By continuing, you agree to Amazon's <a href="#">Conditions of Use</a> and <a href="#">Privacy Notice</a>.
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMeCheckbox" asp-for="RememberMe">
                    <label class="form-check-label" for="rememberMeCheckbox">
                        Keep me signed in
                    </label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Sign In</button>
            </div>
            @*       <a asp-action="ForgotPassword">Forgot password?</a> *@

        </form>

        <div class="footer">
            <p>New to Amazon? <a asp-action="Register" class="btn">Create your Amazon account</a></p>
        </div>
    </div>

</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}