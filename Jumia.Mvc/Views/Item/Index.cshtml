   @using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer localizer
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
@{
    Layout = "_Layout";
    ViewData["Title"] = "Items";
}
@model ResultDataList<ItemViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Item/Index.css" />
</head>
<body>
    <div class="container col-md-12 col-sm-12">
        <form method="Get" asp-action="Create">
            <button type="submit">@localizer["Create Item"]</button>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@localizer["Item Image"]</th>
                    <th scope="col">@localizer["Product Name"]</th>
                    <th scope="col">@localizer["ProductId"]</th>
                    <th scope="col">@localizer["Color"]</th>
                    <th scope="col">@localizer["Quantity"]</th>
                    <th scope="col">@localizer["Size"]</th>
                    <th scope="col">@localizer["Edit"]</th>
                    <th scope="col">@localizer["Delete"]</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var r in Model.Entities)
                {
                    <tr>
                        <td><img src="~/ItemImages/@r.ItemImagestring" alt="@r.ItemImagestring" asp-append-version="true"></td>
                        <td>@r.ProductName</td>
                        <td>@r.ProductId</td>
                        <td>@r.Color</td>
                        <td> @r.Quantity</td>
                        <td>@r.Size</td>
                        <td class="link"> <a asp-controller="Item" asp-action="Update" asp-route-id="@r.Id" style="background-color:forestgreen">@localizer["Edit"]...</a></td>
                        <td class="link"><a asp-controller="Item" asp-action="Delete" asp-route-id="@r.Id" style="background-color:red">@localizer["Delete"]</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>