@{
    Layout = null;
}
@model ItemViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .container {
            width: 44%;
            margin-top: 20px;
            /* border: 1px gray solid; */
            border-radius: 30px;
            padding: 25px;
            background-color: #3a495b29;
        }

        .btn {
            position: relative;
            /* display: flex; */
            left: 39%;
            font-size: 1.5vw;
            width: 23%;
            background-color: #797c7f;
            border: 0;
        }

            .btn:hover {
                background-color: #797c7f;
                color: black;
            }

        img {
            width: 70%;
            margin-bottom: 21px;
            border-radius: 20px;
            position: relative;
            left: 15%;
        }

    </style>

</head>
<body>
    <div class="container" style="width: 50%;
    font-size: 1.12vw;">
        <form method="post" enctype="multipart/form-data">
            <div class="img-fluid">
                <img src="~/ItemImages/@Model.ItemImagestring" alt="@Model.ItemImagestring" />
            </div>

            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <span asp-validation-for="ProductName" style="color:red; display:block;"></span>
                <input type="text" class="form-control" asp-for="ProductName" value="@Model.ProductName">
            </div>

            <div class="mb-3" hidden>
                <label class="form-label">Product ID</label>
                <input type="text" class="form-control" name="ProductId" value="@Model.ProductId">
            </div>
            <div class="mb-3" hidden>
                <label class="form-label">Item ID</label>
                <input type="text" class="form-control" asp-for="@Model.Id" value="@Model.Id">
            </div>
            <div class="mb-3">
                <label class="form-label">Item Quantity</label>
                <input type="text" class="form-control" asp-for="Quantity" value="@Model.Quantity">
            </div>
            <div class="mb-3">
                <label class="form-label">Item Size</label>
                <input type="text" class="form-control" asp-for="Size" value="@Model.Size">
            </div>
            <div class="mb-3">
                <label class="form-label">Item Image</label>
                <input type="file" class="form-control" name="ItemImage" asp-for="ItemImage">
                <input type="hidden" asp-for="ItemImagestring" />
                @*             <img src="~/ItemImages/@Model.ItemImagestring" alt="@Model.ItemImagestring" />
                *@
            </div>
            <div class="mb-3">
                <label class="form-label">Item Color</label>
                <input type="text" class="form-control" asp-for="Color" value="@Model.Color">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>