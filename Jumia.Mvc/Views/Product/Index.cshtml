@*  >
 *@


@model List<Jumia.Dtos.ViewModel.ProuductViewModel>

@{

    ViewData["Title"] = "Index";
}





<style>
    .body {
        justify-content: space-around
    }

    .table {
        width: 99%;
        align-items: center
    }

    .trr th {
        width: 170px;
    }

    .tb td {
        margin-top: 10px
    }
</style>
<body>
    <h1>Index</h1>
    <a asp-action="Create" style="color:cadetblue; text-decoration: none; width: 200px; height: 100px; border: 1px solid black; margin: 10px;">Add new Proudect</a>

    <form asp-controller="Product" asp-action="Index" method="get">
        <input type="text" name="searchString" placeholder="Enter product name">
        <button type="submit">Search</button>
    </form>

    <table>
        <thead>
            <tr class="trr">

                <th class="thh" style=" width:200px;">
                    <label>Name</label>
                </th>

                <th>
                    <label>Price</label>
                </th>

                <th>
                    <label> StockQuantity</label>
                </th>
                <th>
                    <label> Description</label>
                </th>
                <th>
                    <label> DateListed</label>
                </th>
                <th>
                    <label> Seller Name</label>
                </th>
                <th>
                    <label> Catogery</label>
                </th>

            </tr>
        </thead>
        <tbody class="tb">
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Price
                    </td>
                    <td>
                        @product.StockQuantity
                    </td>
                    <td>
                        @product.Description
                    </td>
                    <td>
                        @product.DateListed
                    </td>
                    <td>
                        @product.SellerName
                    </td>
                    <td>
                        @product.CategoryName
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id" style="color:cadetblue; text-decoration: none; width: 200px; height: 100px; border: 1px solid black; margin: 10px;">Edit..</a> |
                        <a asp-action="Delete" asp-route-id="@product.Id" style="color:cadetblue; text-decoration: none; width: 200px; height: 100px; border: 1px solid black; margin: 10px;">Delete</a> |
                        <a asp-action="AssignImage" asp-route-productId="@product.Id" style="color:green; text-decoration: none; width: 200px; height: 100px; border: 1px solid black; margin: 10px;">Assign Image</a> |
                        <a asp-action="DisplayImages" asp-route-productId="@product.Id" style="color:blue; text-decoration: none; width: 200px; height: 100px; border: 1px solid black; margin: 10px;">Display Images</a>
                    </td>
                </tr>
            }


            </tr>
            }
        </tbody>
    </table>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        h1 {
            color: #333;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .trr th {
            background-color: #f2f2f2;
            color: #333;
            padding: 10px;
            text-align: left;
        }

        .tb td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        .tb tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        a {
            display: inline-block;
            padding: 8px 12px;
            margin: 5px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-info {
            background-color: #17a2b8;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        a:hover {
            opacity: 0.7;
        }

        form {
            display: inline;
        }

        input[type="text"] {
            padding: 8px;
            margin-top: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button[type="submit"] {
            cursor: pointer;
            padding: 8px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            margin-left: 10px;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
            }
    </style>

</body>