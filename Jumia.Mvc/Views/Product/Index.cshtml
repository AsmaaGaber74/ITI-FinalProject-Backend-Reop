@model List<ProuductViewModel>

@{

    ViewData["Title"] = "Index";
}





<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Table</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        h3 {
            font-family: 'Pacifico', cursive;
            text-align: center;
        }

        .container {
            max-width: 100%;
            margin: 20px;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            border-bottom: 1px solid #e16009;
            text-align: left;
        }

        th {
            color: #e16009;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        a {
            display: inline-block;
            padding: 8px 12px;
            margin: 5px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-weight: bold;
        }

            a:hover {
                opacity: 0.7;
            }

        input[type="text"] {
            padding: 8px;
            margin-top: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button[type="submit"] {
            cursor: pointer;
            padding: 8px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            margin-left: 10px;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <h3>Number Of Products Now: @Model.Count</h3>
    <div class="container">
        @*  <a asp-action="Create" class="add1">Add new Product</a> *@
        <a asp-action="Create" class="add1" style="color:black; text-decoration: none; width: 180px; height: 50px; border: 1px solid #dfc33b; margin: 10px;">Add new Proudect</a>
        <form asp-controller="Product" asp-action="Index" method="get">
            <input type="text" name="searchString" placeholder="Enter product name">
            <button type="submit">Search</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock Quantity</th>
                    <th>Description</th>
                    <th>Date Listed</th>
                    <th>Seller Name</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.StockQuantity</td>
                        <td>@product.Description</td>
                        <td>@product.DateListed</td>
                        <td>@product.SellerName</td>
                        <td>@product.CategoryName</td>
                        <td class="crud">
                            <a asp-action="Edit" asp-route-id="@product.Id" style="color:black; text-decoration: none; width: 80px; height: 50px; border: 1px solid #e16009; margin: 10px;">Edit..</a> |
                            <a asp-action="Delete" asp-route-id="@product.Id" style="color:black; text-decoration: none; width: 80px; height: 50px; border: 1px solid #e16009; margin: 10px;">Delete</a> <br />
                            <a asp-action="AssignImage" asp-route-productId="@product.Id" style="color:black; text-decoration: none; width: 80px; height: 60px; border: 1px solid #e16009; margin: 10px;margin-left:15px">Assign Image</a> |
                            <a asp-action="DisplayImages" asp-route-productId="@product.Id" style="color:black; text-decoration: none; width: 80px; height: 60px; border: 1px solid #e16009; margin: 10px;">Display Images</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>








