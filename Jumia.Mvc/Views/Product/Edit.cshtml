  @model ProuductViewModel
   @using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer localizer
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
@{

    ViewData["Title"] = "Edit";
}

<style>

    form {
        width:95%;
        padding: 10%;
        margin-left: 20%;
        background-color: #323c58;
        margin-bottom: 5%;
        border-radius: 5%;
    }

    label {
        color: white;
    }

    .btn {
        padding: 10px 25px;
        font-family: "Roboto", sans-serif;
        font-weight: 500;
        background: transparent;
        outline: none !important;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        display: inline-block;
    }

    .btn {
        border: 2px solid #e16009;
        z-index: 1;
        color: white;
        margin: 3%
    }

        .btn:after {
            position: absolute;
            content: "";
            width: 100%;
            height: 0;
            top: 0;
            left: 0;
            z-index: -1;
            background: rgb(255, 255, 255);
            transition: all 0.3s ease;
        }

        .btn:hover {
            color: rgb(0, 0, 0);
        }

            .btn:hover:after {
                top: auto;
                bottom: 0;
                height: 100%;
            }

    h3 {
        padding: 5%;
        font-family: "Galada", cursive;
    }
</style>

<h3> @localizer["You Can Make Update here OR"] <a asp-action="Index" style="color:black; text-decoration: none; width: 90px; height: 50px; border: 1px solid #e16009; margin: 10px;">@localizer["Back  TO List"]..</a>  </h3>

<body>


    <form method="post">
        <div class="form-group">
            <label asp-for="NameEn">@localizer["English Name"]</label>
            <input asp-for="NameEn" class="form-control" />

            <span asp-validation-for="NameEn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NameAr">@localizer["Arabic Name"]</label>
            <input asp-for="NameAr" class="form-control" />

            <span asp-validation-for="NameAr" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">@localizer["Price"]</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BrandNameEn">@localizer["BrandNameEn"]</label>
            <input asp-for="BrandNameEn" class="form-control" />
            <span asp-validation-for="BrandNameEn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BrandNameAr">@localizer["BrandNameAR"]</label>
            <input asp-for="BrandNameAr" class="form-control" />
            <span asp-validation-for="BrandNameAr" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StockQuantity">@localizer["StockQuantity"]</label>
            <input asp-for="StockQuantity" class="form-control" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DescriptionEn">@localizer["DescriptionEn"]</label>
            <input asp-for="DescriptionEn" class="form-control" />
            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DescriptionAR">@localizer["DescriptionAR"]</label>
            <input asp-for="DescriptionAR" class="form-control" />
            <span asp-validation-for="DescriptionAR" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="SellerID">Select SellerName</label>
            <select asp-for="SellerID" class="form-control" asp-items="ViewBag.Sellers"></select>
            <span asp-validation-for="SellerID" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateListed">@localizer["DateListed"]</label>
            <input asp-for="DateListed" class="form-control" />
            <span asp-validation-for="DateListed" style="color:red"></span>
        </div>





        <div>
            <label asp-for="CategoryId">@localizer["Category"]</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
            <span asp-validation-for="CategoryId" style="color:red"></span>
        </div>

        <button type="submit" class="btn btn-primary">@localizer["Edit"]</button>
    </form>

</body>