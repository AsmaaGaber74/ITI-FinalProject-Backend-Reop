@{
    ViewData["Title"] = "Assign Image to Product";
}
<style>
    form {
        width: 70%;
        padding: 10%;
        margin-left: 20%;
        background-color: #3a495b;
        margin-bottom: 5%;
        border-radius: 5%;
    }

    h3 {
        padding: 5%;
        font-family: "Galada", cursive;
    }

    .btn {
        padding: 10px 25px;
        font-family: "Roboto", sans-serif;
        font-weight: 500;
        background: transparent;
        outline: none !important;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        display: inline-block;
    }

    .btn {
        border: 2px solid #e16009;
        z-index: 1;
        color: white;
        margin: 3%
    }

        .btn:after {
            position: absolute;
            content: "";
            width: 100%;
            height: 0;
            top: 0;
            left: 0;
            z-index: -1;
            background: rgb(255, 255, 255);
            transition: all 0.3s ease;
        }

        .btn:hover {
            color: rgb(0, 0, 0);
        }

            .btn:hover:after {
                top: auto;
                bottom: 0;
                height: 100%;
            }
</style>
<body>


    <h3>@ViewData["Title"]</h3>

    <form asp-action="AssignImage" method="post" enctype="multipart/form-data">
        <input type="hidden" name="productId" value="@ViewBag.ProductId" />
        <div class="form-group">
            <label for="imageFile">Image File</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>
        <button type="submit" class="btn">Upload Image</button>
        <a asp-action="Index" style="color:white; text-decoration: none; width: 90px; height: 100px; border: 1px solid #e16009; margin: 10px;">Back  TO List..</a>

    </form>

</body>