@model IEnumerable<ProductImageDto>
 @using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer localizer
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

@{
    ViewData["Title"] = @localizer["Product Images"];
}
<style>
    h3 {
        padding: 5%;
        font-family: "Galada", cursive;
    }

    col-md-4 {
        margin: 3%;
    }

    img {
        border-radius: 5%;
        width: 40%;
        height: 40%
    }

    .btn {
        padding: 10px 25px;
        font-family: "Roboto", sans-serif;
        font-weight: 500;
        background: transparent;
        outline: none !important;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        display: inline-block;
    }

    .btn {
        border: 2px solid #e16009;
        z-index: 1;
        color: black;
        margin: 3%;
    }

        .btn:after {
            position: absolute;
            content: "";
            width: 100%;
            height: 0;
            top: 0;
            left: 0;
            z-index: -1;
            background: rgb(255, 255, 255);
            transition: all 0.3s ease;
        }

        .btn:hover {
            color: rgb(0, 0, 0);
            background-color: red;
        }
</style>

<h3>@ViewData["Title"]</h3>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var image in Model)
        {
            <div class="col-md-4 text-center">
                <img src="@image.Path" class="img-fluid" alt="Product Image" />
                <form asp-action="DeleteImage" method="post" class="mt-2">
                    <input type="hidden" name="id" value="@image.Id" />
                    <button type="submit" class="btn btn-danger">@localizer["Delete"]</button>
                </form>
            </div>
        }
    </div>
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a asp-action="Index" class="btn btn-primary">@localizer["Back  TO List"]</a>
        </div>
    </div>
}
else
{
    <p>@localizer["No images to display"].</p>
}
