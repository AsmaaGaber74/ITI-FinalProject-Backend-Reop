  @model ProuductViewModel

@{

    ViewData["Title"] = "Creat";
}

<style>

    form {
        width: 70%;
        padding: 10%;
        margin-left: 20%;
        background-color: #323c58;
        margin-bottom: 5%;
        border-radius: 5%;
    }

    input {
        border-radius: 3% #e16009;
        /* border-color: #e16009 */
        border: 2px solid #e16009;
    }

    label {
        color: white;
    }

    .btn {
        padding: 10px 25px;
        font-family: "Roboto", sans-serif;
        font-weight: 500;
        background: transparent;
        outline: none !important;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        display: inline-block;
    }

    .btn {
        border: 2px solid #e16009;
        z-index: 1;
        color: white;
        margin: 3%
    }

        .btn:after {
            position: absolute;
            content: "";
            width: 100%;
            height: 0;
            top: 0;
            left: 0;
            z-index: -1;
            background: rgb(255, 255, 255);
            transition: all 0.3s ease;
        }

        .btn:hover {
            color: rgb(0, 0, 0);
        }

            .btn:hover:after {
                top: auto;
                bottom: 0;
                height: 100%;
            }

    h3 {
        padding: 5%;
        font-family: "Galada", cursive;
    }
</style>



<h3> You Can Add New Product Now OR <a asp-action="Index" style="color:black; text-decoration: none; width: 90px; height: 50px; border: 1px solid #e16009; margin: 10px;">Back  TO List..</a>  </h3>

<body>

    <form method="post">
        <div class="form-group">
            <label asp-for="NameEn"></label>
            <input asp-for="NameEn" class="form-control" />

            <span asp-validation-for="NameEn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NameAr"></label>
            <input asp-for="NameAr" class="form-control" />

            <span asp-validation-for="NameAr" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StockQuantity"></label>
            <input asp-for="StockQuantity" class="form-control" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionEn"></label>
            <input asp-for="DescriptionEn" class="form-control" />
            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DescriptionAR"></label>
            <input asp-for="DescriptionAR" class="form-control" />
            <span asp-validation-for="DescriptionAR" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BrandNameEn"></label>
            <input asp-for="BrandNameEn" class="form-control" />
            <span asp-validation-for="BrandNameEn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BrandNameAr"></label>
            <input asp-for="BrandNameAr" class="form-control" />
            <span asp-validation-for="BrandNameAr" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="SellerID">Select SellerName</label>
            <select asp-for="SellerID" class="form-control" asp-items="ViewBag.Sellers"></select>
            <span asp-validation-for="SellerID" style="color:red"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateListed"></label>
            <input asp-for="DateListed" class="form-control" />
            <span asp-validation-for="DateListed" style="color:red"></span>
        </div>



        <div>
            <label asp-for="CategoryId">Ctegory</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
            <span asp-validation-for="CategoryId" style="color:red"></span>
        </div>


        <button type="submit" class="btn ">Creat</button>
    </form>

</body>